/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

/* 添加按键 */
.btn-add {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #03d44c;
  position: fixed;
  bottom: 60rpx;
  right: 40rpx;
  opacity: 0.8;
  border-radius: 50%;
  border: 1px solid #fff;
  color: #fff;
  font-size: 50rpx;
  font-weight: 1;
  text-align: center;
}

/* 添加按键单击 */
.btn-add-hover {
  background-color: #a5f3c0;
  color: #fff;
}

@import 'style/weui.wxss';

